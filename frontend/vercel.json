{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "JWT_SECRET": "@jwt_secret",
    "DB_USER": "@db_user",
    "DB_HOST": "@db_host",
    "DB_NAME": "@db_name",
    "DB_PASSWORD": "@db_password",
    "DB_PORT": "@db_port"
  }
}


